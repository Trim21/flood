{
  "compilerOptions": {
    "composite": true,
    "target": "es2019",
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "sourceMap": false,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "rootDir": "../",
    "paths": {
      "@shared/*": ["./*"]
    },
    "outDir": "./dist"
  },
  "include": ["./**/*.ts", "../package.json"]
}
