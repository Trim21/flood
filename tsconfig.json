{
  "references": [
    {
      "path": "./client/"
    },
    {
      "path": "./server/"
    }
  ],
  "compilerOptions": {
    "composite": true,
    "sourceMap": true,
    "target": "esnext",
    "moduleResolution": "node",
    "allowJs": true,
    "module": "esnext",
    "noEmit": true,
    "strict": true,
    "isolatedModules": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "useDefineForClassFields": true,
    "baseUrl": "./",
    "rootDir": "./",
    "outDir": "./dist/tsc/",
    "paths": {
      "@client/*": [
        "client/src/javascript/*"
      ],
      "@server/*": [
        "server/*"
      ],
      "@shared/*": [
        "shared/*"
      ]
    }
  },
  "include": [
    "./server/**/*.ts",
    "./client/**/*.ts",
    "./client/**/*.tsx",
    "./shared/**/*.ts"
  ],
  "exclude": [
    "**/node_modules/**"
  ]
}
