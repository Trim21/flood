{
  "compilerOptions": {
    "composite": true,
    "target": "es2019",
    "moduleResolution": "node",
    "allowJs": true,
    "module": "commonjs",
    "sourceMap": false,
    "strict": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "baseUrl": "./",
    "rootDir": "../",
    "paths": {
      "@shared/*": ["../shared/*"]
    },
    "types": ["node"],
    "outDir": "./dist"
  },
  "include": ["./**/*.ts", "../shared/**/*.ts", "../package.json"],
  "exclude": ["./**/*.test.ts"]
}
